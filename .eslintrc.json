{
  "extends": [ "eslint:recommended", "plugin:@typescript-eslint/recommended" ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-console": "off",
    "no-fallthrough": "off",
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-var-requires": "off"
  },
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [ "@typescript-eslint" ]
}
